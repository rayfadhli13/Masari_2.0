<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">
    <TextView
        android:id="@+id/textView_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:text="Witness the magic unfold in MASARIðŸª„"
        android:fontFamily="@font/american_typewriter"
        android:textSize="19sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/textView_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/american_typewriter"
        android:layout_below="@id/textView_appName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:text="Your MASAR (path):"
        android:textSize="21sp"
        android:textColor="#000000" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_subTitle"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tvBestPath"
        android:layout_width="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tvDistanceBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBestPath"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBestDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDistanceBefore"
        android:textColor="#000000"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btnConfirmSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Go Back Home"
        android:background="@drawable/rounded_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="5dp"
        android:textAllCaps="false" />
</RelativeLayout>
