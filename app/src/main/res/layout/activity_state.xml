<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textView_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:text="Your journey begins here"
        android:fontFamily="@font/american_typewriter"
        android:textSize="21sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/textView_subTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_subTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:text="Choose a state, kickstart your journey.\nMasari does the rest:"
        android:fontFamily="@font/american_typewriter"
        android:textSize="21sp"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_subTitle1"
        android:layout_above="@id/more"
        android:divider="@null"
        android:dividerHeight="0dp" />
    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/american_typewriter"
        android:padding="8dp"
        android:layout_above="@id/button_next"
        android:singleLine="true"
        android:text="..."
        android:textAlignment="center"
        android:textColor="#e06c44"
        android:textSize="30sp" />
    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_background"
        android:padding="5dp"
        android:fontFamily="@font/american_typewriter"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21sp" />
</RelativeLayout>
